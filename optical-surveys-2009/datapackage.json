{
  "name": "optical-surveys-2009",
  "title": "Optical Surveys (2009)",
  "description": "Positions of an Ohio State University GPS receiver on the glacier main branch measured by a robotic survey theodolite.",
  "version": "0.1.0",
  "contributors": [
    {
      "name": "Ethan Welty",
      "email": "ethan.welty@gmail.com",
      "roles": "Assembled and published the datapackage."
    },
    {
      "name": "Shad O'Neel",
      "roles": "Performed the research and processed the data."
    }
  ],
  "sources": [
    {
      "name": "Original data, scripts, and documentation",
      "path": "sources/"
    }
  ],
  "resources": [
    {
      "name": "positions",
      "path": "data/markers.csv",
      "schema": {
        "fields": [
          {
            "name": "t",
            "type": "datetime",
            "description": "Date and time (UTC).",
            "format": "YYYY-MM-DD'T'hh:mm:ss'Z'"
          },
          {
            "name": "x",
            "type": "number",
            "description": "Easting (m) in WGS84 UTM Zone 6N (EPSG:32606)."
          },
          {
            "name": "y",
            "type": "number",
            "description": "Northing (m) in WGS84 UTM Zone 6N (EPSG:32606)."
          },
          {
            "name": "z",
            "type": "number",
            "description": "Height (m) above the WGS84 ellipsoid."
          }
        ]
      }
    }
  ]
}
