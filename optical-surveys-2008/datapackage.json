{
  "name": "optical-surveys-2008",
  "title": "Optical Surveys (2008)",
  "description": "Three survey markers were deployed in 16-19 June 2008 near the calving face. Positions of the targets were obtained using a robotic survey theodolite at a nominal time separation of 15 minutes.",
  "version": "0.1.0",
  "contributors": [
    {
      "name": "Ethan Welty",
      "email": "ethan.welty@gmail.com",
      "roles": "Assembled and published the datapackage."
    },
    {
      "name": "Shad O'Neel",
      "roles": "Performed the research and processed the data."
    }
  ],
  "sources": [
    {
      "name": "Original data, scripts, and documentation",
      "path": "sources/"
    }
  ],
  "resources": [
    {
      "name": "positions",
      "path": "data/markers.csv",
      "schema": {
        "fields": [
          {
            "name": "marker",
            "type": "integer",
            "description": "Marker identifier."
          },
          {
            "name": "t",
            "type": "datetime",
            "description": "Date and time (unknown time zone).",
            "format": "YYYY-MM-DD'T'hh:mm:ss"
          },
          {
            "name": "x",
            "type": "number",
            "description": "Easting (m) in WGS84 UTM Zone 6N (EPSG:32606)."
          },
          {
            "name": "y",
            "type": "number",
            "description": "Northing (m) in WGS84 UTM Zone 6N (EPSG:32606)."
          },
          {
            "name": "z",
            "type": "number",
            "description": "Height (m) above the WGS84 ellipsoid."
          }
        ]
      }
    }
  ]
}
